    "def collatz(number):\n",
    "    while number != 1:\n",
    "        if number % 2 == 0:\n",
    "            number = number // 2\n",
    "        else:\n",
    "            number = 3* number + 1\n",
    "        print(number)\n",
    "N= int(input('Enter the starting Collatz number: '))\n",
    "collatz(N)"
